{
  "command-runner.commands": {
    "cargo run": "cargo run",
    "cargo run release": "cargo run --release --features \"no_validation_layer\"",

    // creates two claude tabs in a new windows terminal
    "claude!": "wt.exe -w 0 nt --title \"Claude\" wsl -e zsh -c \"source ~/.zshrc && claude\"",

    "create python env": "conda create -n re_flora_test_env python=3.9 -y",
    "install python env": "conda activate re_flora_test_env && pip install -r misc/test_env/requirements.txt",
  },
  "glsllint.glslangValidatorArgs": ["-V"]
}
